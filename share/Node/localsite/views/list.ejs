<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title><%= lst %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include("style", {}) %>
    <style scoped>
        body {
            background-color: lightskyblue;
            color: brown;
        }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <link rel="shortcut icon" href="/music.ico">
</head>

<body>
    <div class="container">
        <form action="<%= prefix %>/" method="get">
            <button type="submit" class="entxt waves-effect waves-light submit-btn">
                Go back to MAIN
            </button>
        </form>
        <h1 class="header"><%= lst %></h1>
        <form action="<%= prefix %>/listadditem" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <input type="hidden" name="lst" value="<%= lst %>">
            <div class="input-field col s12">
                <label for="nitm" class="entxt">New item:</label><br>
                <input type="text" class="entxt" name="nitm">
            </div>
            <button type="submit" class="entxt waves-effect waves-light submit-btn">Add to list</button>
        </form>
        <ul>
            <% itms.forEach(function(itm) { %>
            <li>
                <div class="col s12 m4">
                    <div class="card green darken-1">
                        <div class="card-content white-text">
                            <span class="card-title"><%= itm['itm'] %></span>
                        </div>
                        <div class="card-action">
                            <form action="<%= prefix %>/listdelitem" method="POST">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <input type="hidden" name="lst" value="<%= lst %>">
                                <input type="hidden" name="itm" value="<%= itm['itm'] %>">
                                <button type="submit"
                                    class="waves-effect waves-light delete-btn">DEL</button>
                            </form>
                        </div>
                    </div>
                </div>
            </li>
            <% }); %>
        </ul>
    </div>
</body>

</html>