<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Address lookup results</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="shortcut icon" href="/music.ico">
    <%- include("style", {}) %>
    <style scoped>
        body {
            background-color: lightgoldenrodyellow;
            color: black;
        }
    </style>
</head>

<body>
    <div class="container">
        <form action="<%= prefix %>/abk" method="get">
            <button type="submit" class="entxt waves-effect waves-light submit-btn">
                Back to Address Book
            </button>
        </form>
        <% rows.forEach(function(row) { %>
        <div class="card blue lighten-2">
            <div class="card-content black-text">
                <span class="card-title"><%= row['fn'] %> <%= row['ln'] %></span>
            </div>
            <table class="striped">
                <tr>
                    <td>Email</td>
                    <td><%= row['eml'] %></td>
                </tr>
                <tr>
                    <td>Cell phone</td>
                    <td><%= row['cp'] %></td>
                </tr>
                <tr>
                    <td>Work phone</td>
                    <td><%= row['wp'] %></td>
                </tr>
                <tr>
                    <td>Home phone</td>
                    <td><%= row['hp'] %></td>
                </tr>
                <tr>
                    <td>Work address</td>
                    <td><%= row['wa'] %></td>
                </tr>
                <tr>
                    <td>Home address</td>
                    <td><%= row['ha'] %></td>
                </tr>
                <tr>
                    <td>Web site</td>
                    <td><%= row['web'] %></td>
                </tr>
                <tr>
                    <td>Notes</td>
                    <td><%= row['notes'] %></td>
                </tr>
            </table>
            <table>
                <tr>
                    <td>
                      <a class="black-text" style="font-size:2.1em" href="<%= prefix %>/addressedt?<%- `_csrf=${csrfToken}` + Object.keys(row).map(function(k) { return `&${k}=${encodeURIComponent(row[k] || '')}` }).join('') %>">Edit</a>
                    </td>
                    <td>
                      <a class="black-text" style="font-size:2.1em" href="<%= prefix %>/addressdel?<%- `_csrf=${csrfToken}` + Object.keys(row).map(function(k) { return `&${k}=${encodeURIComponent(row[k] || '')}` }).join('') %>">Delete</a>
                    </td>
                    <td>
                      <a class="black-text" style="font-size:2.1em" href="<%= prefix %>/getvcf?<%- `_csrf=${csrfToken}` + Object.keys(row).map(function(k) { return `&${k}=${encodeURIComponent(row[k] || '')}` }).join('') %>">VCard</a>
                    </td>
                </tr>
            </table>
        </div>
        <% }); %>
    </div>
</body>

</html>
