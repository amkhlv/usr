# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /pile/                       controllers.Application.index()

GET     /pile/login                  controllers.Application.initLogin()
POST    /pile/login                  controllers.Application.login()
POST    /pile/logout                 controllers.Application.logout()
POST    /pile/logoutConfirmation     controllers.Application.logoutConfirmation()

POST    /pile/upload                 controllers.Application.upload()

POST    /pile/download               controllers.Application.download(fn)

POST    /pile/deleteFile             controllers.Application.deleteFile(fn)

GET     /pile/warning                controllers.Application.warning(message)

# Map static resources from the /public folder to the /assets URL path
GET     /pile/assets/*file           controllers.Assets.at(path="/public", file)
GET     /pile/webjars/*file          controllers.WebJarAssets.at(file)