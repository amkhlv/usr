# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /chat/                           controllers.Application.index
GET     /chat/ws                         controllers.Application.ws
GET     /chat/login                  controllers.Application.initLogin()
POST    /chat/login                  controllers.Application.login()


# Map static resources from the /public folder to the /assets URL path
GET     /chat/assets/*file               controllers.Assets.at(path="/public", file)
GET     /chat/webjars/*file          controllers.WebJarAssets.at(file)
