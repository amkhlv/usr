
Rxvt*keysym.0xFF50:\001
Rxvt*keysym.0xFF57:\005
!Rxvt*menu: /root/.rxvt.menu
Rxvt*saveLines: 3500

!warning, needs about 500 bytes per line for scrollback buffer...
URxvt.saveLines: 3500
! idea here is 7x14 only iso8859-1, xft:mono fills in other characters...
!URxvt.font: x:10x20
!URxvt.font: x:12x24
!URxvt.font: x:kanji24,xft:mono

URxvt.font: -xos4-terminus-medium-r-normal-*-*-160-*-*-*-*-iso8859-1
URxvt.boldFont: -xos4-terminus-bold-r-normal-*-*-160-*-*-*-*-iso8859-1
URxvt.keysym.F2: command:\033]710;-xos4-terminus-medium-r-normal-*-*-160-*-*-*-*-koi8-r\007
URxvt.keysym.F1: command:\033]710;-xos4-terminus-medium-r-normal-*-*-160-*-*-*-*-iso8859-1\007
URxvt.keysym.S-F2: command:\033]710;-xos4-terminus-medium-r-normal-*-*-200-*-*-*-*-koi8-r\007
URxvt.keysym.S-F1: command:\033]710;-xos4-terminus-medium-r-normal-*-*-200-*-*-*-*-iso8859-1\007
!URxvt.font: xft:Terminus-14:dpi=89
!URxvt.boldFont: xft:Terminus-14:bold:dpi=89
!URxvt.font: xft:Terminus-16
!URxvt.boldFont: xft:Terminus-16:bold

!URxvt.boldFont: x:kanji24,xft:mono
!URxvt.boldFont: x:10x20

!URxvt.italicFont: xft:mono:italic:autohint=true

URxvt.perl-ext-common: default,tabbed,matcher
URxvt.urlLauncher: firefox

URxvt.tabbar-fg: 3
URxvt.tabbar-bg: 7
URxvt.tab-fg: 2
URxvt.tab-bg: 7

URxvt.searchable-scrollback: C-s

URxvt.lineSpace: 3

! control + - results in a small font size (10)
URxvt.keysym.C-minus: command:\033]710;xft:Terminus-10\007
! control + 0 for medium font size (16)
URxvt.keysym.C-0: command:\033]710;xft:Terminus-18\007
! control + = for a great font size (26)
URxvt.keysym.C-equal: command:\033]710;xft:Bitstream Vera Sans Mono:pixelsize=24\007


