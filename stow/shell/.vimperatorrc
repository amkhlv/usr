command fr    execute(liberator.open("http://dictionary.reverso.net/french-english/"+util.readFromClipboard(), liberator.NEW_TAB, true))
command emacs javascript(io.system("FILETOEDIT=\""+(document.getElementById("urlbar").value.replace(/^file:\/\//,""))+"\" ; if [ -e \"$FILETOEDIT\" ] ; then emacs \"$FILETOEDIT\" ; else zenity --error --text=\"file not found\" ; fi &"))

command pod javascript(io.system("FILETOEDIT=\""+(document.getElementById("urlbar").value.replace(/^file:\/\//,"").replace(/#.*/,""))+"\" ;  FTE=\"$( readlink -f \"$FILETOEDIT\" | sed -e\'s/\\/html-doc\\//\\/doc\\//\' | sed -e\'s/\\.html$/.pod/\' )\" ; if [ -e \"$FTE\" ] ; then emacsclient \"$FTE\" ; else zenity --error --text=\"file $FTE not found\" ; fi &"))

command scribble javascript(io.system("FILETOEDIT=\""+(document.getElementById("urlbar").value.replace(/^file:\/\//,"").replace(/#.*/,""))+"\" ;  [[ \"$FILETOEDIT\" =~ .*/index\\.html$ ]] && { FTE=\"$( readlink -f \"$FILETOEDIT\" | sed -e\'s|/index\\.html$|.scrbl|\' )\" ; } || { FTE=\"$( readlink -f \"$FILETOEDIT\" | sed -e\'s/\\.html$/.scrbl/\' )\" ; } ; if [ -e \"$FTE\" ] ; then emacsclient \"$FTE\" ; else zenity --error --text=\"file $FTE not found\" ; fi &"))

command shell javascript(io.system("FILETOEDIT=\""+(document.getElementById("urlbar").value.replace(/^file:\/\//,""))+"\" ; uxterm -e \"cd $FILETOEDIT ; bash\" &"))

map <C-m> <cr>
inoremap <C-m> <cr>
" start of line
:inoremap <C-A>		<Home>
" back one character
:inoremap <C-B>		<Left>
" delete character under cursor
:inoremap <C-D>		<Del>
" end of line
:inoremap <C-E>		<End>
" forward one character
:inoremap <C-F>		<Right>
" recall newer command-line
:inoremap <C-N>		<Down>
" recall previous (older) command-line
:inoremap <C-P>		<Up>
" back one word
:inoremap <A-B>	<S-Left>
" forward one word
:inoremap <A-F>	<S-Right>

vmap p :<CR>kkkkkkkki
vmap n :<CR>jjjjjjjji


