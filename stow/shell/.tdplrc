# include "/usr/share/themes/Industrial/gtk-2.0/gtkrc"
include "/usr/share/themes/Simple/gtk-2.0/gtkrc"


# This determines the font:

style "default_tdpl"
{
  font_name="DejaVu Sans 11"
  GtkButton::focus-line-width = 2
  GtkButton::focus-line-pattern = "\008\001"
}
class "GtkWidget" style "default_tdpl"


# This determines the default color of the button:

style "other_buttons"
{
bg[NORMAL]="#FFD39B"
bg[PRELIGHT]="#FFD39B"
}
class "GtkButton" style "other_buttons" 

# This determines the background color of the window:
# 
# style "background_window_style"
