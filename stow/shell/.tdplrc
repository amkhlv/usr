style "mypink"
{
bg[NORMAL] = "#FF9eaa"
bg[PRELIGHT] = "#FF9eaa"
}
widget "*time-button" style "mypink"

style "regbutton"
{
  bg[NORMAL] = "#e4eef7"
  bg[PRELIGHT] = "#ffffff"
  fg[NORMAL] = "#de5322"
}
widget "*regular-item" style "regbutton"

style "repeating"
{
  bg[NORMAL] ="#B4DF73"
  bg[PRELIGHT] ="#BDFF59"
}
widget "*regular-repeating-item" style "repeating"

style "important"
{
  bg[NORMAL] = "#ffff33"
  bg[PRELIGHT] = "#ffff66"
}
widget "*important-item" style "important"

style "superimportantlabel"
{
  font_name="DejaVu Sans 13"
  fg[NORMAL] = "#44eeff"
  fg[PRELIGHT] = "#ffffff"
# fg[NORMAL] = "#44bbff"
}
widget "*super-important-label" style "superimportantlabel"

style "superimportantbutton"
{
  bg[NORMAL] = "#ff3300"
  bg[PRELIGHT] = "#ff4500"
}
widget "*super-important-button" style "superimportantbutton"

style "titlelabel"
{
  font_name="Monospace 16"
  fg[NORMAL] = "#0000cc"
}
widget "*title-label" style "titlelabel"
