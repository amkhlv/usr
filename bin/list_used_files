#!/bin/bash

DEBUG_MODE=""

# this program checks which files in the current folder 
# are referred in a given file

[ "$1" ] || { echo "usage: $0 filename" ; exit 0 ; }

list_of_files=""

for N in $( find -type f  ) 
do 
    N="$( echo $N | sed -e's/^\.\///' )"
	if [ "$( cat $1 | grep -F $N )" ] 
	then list_of_files=$list_of_files$N"
"
	else [ "$DEBUG_MODE" ] && { echo "not used: "$N ; }
	fi
done

echo "$list_of_files" 
